<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactFragment_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pewter_blue"
    tools:context=".Fragments.ContactFragment"
    tools:openDrawer="left">


    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_header"
            layout="@layout/toolbar_header" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_header"
            android:layout_above="@id/toolbar_footer"
            android:fillViewport="true">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Fragment"
                    android:textSize="300sp">
                </TextView>

            </FrameLayout>

        </ScrollView>

        <include
            android:id="@+id/toolbar_footer"
            layout="@layout/toolbar_footer" />

    </RelativeLayout>

    <include
        android:id="@+id/appBar_navigation"
        layout="@layout/appbar_home_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/header_navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/pewter_blue"
        app:headerLayout="@layout/header_file"
        app:menu="@menu/bottom_nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>